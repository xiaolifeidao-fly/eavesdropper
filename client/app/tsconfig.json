{
  "compilerOptions": {
    "target": "ES2015",                                  
    /* Modules */
    "module": "CommonJS",    
    "lib": ["es2015"],
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                     
    "skipLibCheck": true  ,                             
    "outDir": "./dist",
    "types": ["node", "electron"],
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@api/*": [
        "../common/api/*"
      ],
      "@utils/*": [
        "../common/utils/*"
      ],
      "@model/*": [
        "../common/model/*"
      ]
    }
  },
  "include": ["src/**/*"]
}
